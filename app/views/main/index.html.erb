<div class="bg-primary form-steps">
  <section id="about">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
          <h2 class="section-heading text-center">Qual a sua necessidade? <small style="color: white"> quando, como e onde... </small></h2>
          <hr class="light">
          <div class="row">
            <form action="demands" method="post">
              <div class="col-sm-12">
                <div class="form-group">
                  <label for="name">Inoforme seu nome</label>
                  <input type="text" name="name" class="form-control" value="">
                </div>
              </div>

              <div class="col-sm-12">
                <div class="form-group">
                  <label for="name">Informe seu email</label>
                  <input type="text" name="name" class="form-control" value="">
                </div>
              </div>

              <div class="col-sm-12">
                <div class="form-group">
                  <label for="name">Fotografia ou Filmagem?</label>
                  <select class="form-control" name="">
                    <option value="option">Selecione...</option>
                    <option value="option">Fotografia</option>
                    <option value="option">Filmagem</option>
                  </select>
                </div>
              </div>

              <div class="col-sm-12">
                <div class="form-group">
                  <label for="name">Tipo do evento</label>
                  <select class="form-control" name="">
                    <option value="option">Selecione...</option>
                    <option value="option">Pessoal</option>
                    <option value="option">Aniversário</option>
                    <option value="option">Casamento</option>
                    <option value="option">Produto</option>
                    <option value="option">Animais</option>
                    <option value="option">Bebes</option>
                  </select>
                </div>
              </div>

              <div class="col-sm-12">
                <div class="form-group">
                  <label for="name">Data do evento</label>
                  <input type="text" name="name" class="form-control" id="teste">
                </div>
              </div>

              <div class="col-sm-12">
                <div class="form-group">
                  <label for="name">Estado</label>
                  <select class="form-control" name="">
                    <option value="option">Selecione...</option>
                    <option value="option">Pessoal</option>
                    <option value="option">Aniversário</option>
                    <option value="option">Casamento</option>
                    <option value="option">Produto</option>
                    <option value="option">Animais</option>
                    <option value="option">Bebes</option>
                  </select>
                </div>
              </div>

              <div class="col-sm-12">
                <div class="form-group">
                  <label for="name">Cidade</label>
                  <select class="form-control" name="">
                    <option value="option">Selecione...</option>
                    <option value="option">Pessoal</option>
                    <option value="option">Aniversário</option>
                    <option value="option">Casamento</option>
                    <option value="option">Produto</option>
                    <option value="option">Animais</option>
                    <option value="option">Bebes</option>
                  </select>
                </div>
              </div>

              <div class="col-sm-12">
                <div class="form-group">
                  <label for="name">Descrição do local do evento</label>
                  <textarea name="name" class="form-control" rows="4" cols="80"></textarea>
                </div>
              </div>

              <div class="col-lg-12 text-center" style="margin-top: 20px">
                <button class="next-step-about btn btn-default btn-xl">Próximo estapa</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="event-date">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-lg-offset-2 text-center">

          <div id='teste'></div>
        </div>
      </div>
    </div>
    <script type="text/javascript">
    $('#teste').datepicker({
      format: "dd/mm/yyyy",
      todayBtn: "linked",
      language: "pt-BR",
      todayHighlight: true
    });
    </script>
  </section>
</div>

<section id="services" class="hide">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
